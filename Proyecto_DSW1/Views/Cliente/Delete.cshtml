@model Proyecto_DSW1.Models.Cliente

@{
    ViewBag.Title = "Delete";
}

<body style="background-color: #42413D" >

    <h2 class="text-center">Eliminación de cliente<strong> @Html.DisplayFor(model => model.nom_cli) @Html.DisplayFor(model => model.ape_cli)</strong> </h2>

<div>
    <h4>Datos del Cliente:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            DNI
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dni_clie)
        </dd>

        <dt>
            NOMBRE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_cli)
        </dd>

        <dt>
            APELLIDO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ape_cli)
        </dd>

        <dt>
            CORREO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mail_cli)
        </dd>

        <dt>
            TELEFONO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tel_cli)
        </dd>

        <dt>
            DIRECCION
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Distrito.nom_dis)
        </dd>

    </dl>
    <h5>¿Seguro de eliminar Cliente?</h5>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
            @Html.ActionLink("LISTADO", "Index", null, new { @class = "btn btn-warning" })
        </div>
    }
</div>
</body>
<style>
    dd{
        color:whitesmoke
    }
    dt{
        color:whitesmoke
    }
    h2 {
        color: whitesmoke
    }
    h5 {
        color: burlywood
    }
    h4 {
        color: whitesmoke
    }
</style>
