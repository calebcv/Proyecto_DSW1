@model IEnumerable<Proyecto_DSW1.Models.Producto>

@{
    ViewBag.Title = "Index";    
}

<h2 class="text-center">Listado - Manteniento de Productos</h2>

<p>
    @Html.ActionLink("Nuevo producto", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="bg-primary">
        <th>
            @Html.DisplayNameFor(model => model.idProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.nom_cat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nom_prod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pre_prod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sto_prod)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.img_prod)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.nom_cat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pre_prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sto_prod)
            </td>
            <td>
                <img class="container-img" src="@Url.Content(item.img_prod)" alt="Photo" style="width:120px;height:70px" />
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.idProducto }) |
                @Html.ActionLink("X", "Delete", new { id = item.idProducto })
            </td>
        </tr>
    }
</table>
<br />
<style>

    .container-img {
        width: 120px;
        height: 70px;
    }

.container {
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}
</style>